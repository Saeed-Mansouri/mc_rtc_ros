<launch>
  <arg name="robot" />
  <arg name="env" default="ground" />

  <include file="$(find mc_scenario)/robot/$(arg robot).xml" />
  <include file="$(find mc_scenario)/env/$(arg env).xml" ns="env" />

  <param name="env/tf_prefix" value="/env"/>
  <node name="env_state_publisher" pkg="robot_state_publisher" type="state_publisher" ns="env"></node>

  <node name="map_to_env" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /robot_map /env/base_link 1000" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mc_rtc_ticker)/launch/display.rviz"/>
</launch>
